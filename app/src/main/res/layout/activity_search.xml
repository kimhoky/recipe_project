<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/search_backgr">


    <EditText
        android:id="@+id/search_edt"
        android:layout_width="301dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edt_back"
        android:paddingLeft="20dp"
        android:hint="Search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="411dp"
        android:layout_height="529dp"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_search_btn"
        android:layout_width="133dp"
        android:layout_height="53dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_main_btn"
        android:layout_width="133dp"
        android:layout_height="53dp"
        android:layout_marginEnd="140dp"
        android:text="Main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/search_favotie_btn"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:text="Favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/search_textView"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/search_back"
        android:gravity="center"
        android:text="양식"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_textView2"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/search_back"
        android:gravity="center"
        android:text="중식"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_textView4"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/search_back"
        android:gravity="center"
        android:text="한식"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_textView3"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/search_back"
        android:gravity="center"
        android:text="일식"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/search_image_btn"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search" />
</androidx.constraintlayout.widget.ConstraintLayout>
