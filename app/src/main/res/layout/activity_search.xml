<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/search_edt"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:text="입력할 검색어 혹은 태그를 적어주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/search_imageView1"
        android:layout_width="120dp"
        android:layout_height="165dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="204dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/search_imageView2"
        android:layout_width="120dp"
        android:layout_height="165dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="204dp"
        app:layout_constraintStart_toEndOf="@+id/search_imageView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/search_imageView3"
        android:layout_width="120dp"
        android:layout_height="165dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/search_imageView4"
        android:layout_width="120dp"
        android:layout_height="165dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/search_search_btn"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_main_btn"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_search_btn" />

    <Button
        android:id="@+id/search_favotie_btn"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/search_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="태그1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_edt" />

    <TextView
        android:id="@+id/search_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:text="태그2"
        app:layout_constraintStart_toEndOf="@+id/search_textView3"
        app:layout_constraintTop_toBottomOf="@+id/search_edt" />

    <TextView
        android:id="@+id/search_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="태그3"
        app:layout_constraintStart_toEndOf="@+id/search_textView2"
        app:layout_constraintTop_toBottomOf="@+id/search_edt" />

    <TextView
        android:id="@+id/search_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:text="태그4"
        app:layout_constraintStart_toEndOf="@+id/search_textView"
        app:layout_constraintTop_toBottomOf="@+id/search_edt" />

    <ImageView
        android:id="@+id/search_imageView5"
        android:layout_width="64dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search" />
</androidx.constraintlayout.widget.ConstraintLayout>
